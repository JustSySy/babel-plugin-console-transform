{
    "compilerOptions": {
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": false,
        "allowSyntheticDefaultImports": true,
        "sourceMap": false,
        "types": ["babel__core", "babel__traverse", "mocha", "node"],
        "lib": ["es2015"],
        "outDir": "./dist",
        "downlevelIteration": true,
        "declaration": true,
        "declarationMap": false,
        "declarationDir": "./dist/types"
    },
    "include": [
        "./src/**/*.ts", "src/index.js"
    ]
}
